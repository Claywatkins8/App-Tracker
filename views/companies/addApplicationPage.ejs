<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Link up css -->
    <link rel="stylesheet" href="/styles/main.css" />
    <!-- Link up scripts -->
    <script src="/scripts/app.js" defer></script>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />

    <title>Application Tracker</title>
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Application Tracker</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/"
            >Home <span class="sr-only">(current)</span></a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/companies/">Companies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/applications/">All Applications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/companies/new">New Application</a>
        </li>
      </ul>
    </div>
  </nav>

  <body>

    <!-- Add Application Form -->
    <form action="/companies" method="POST">
    <section>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="jobposting">Job Posting Title</label>
            <input
              type="text"
              class="form-control"
              name="jobTitle"
              placeholder="Software Engineer"
            />
          </div>
          <div class="form-group col-md-3">
            <label for="inputPassword4">Company</label>
            <input
              type="text"
              class="form-control"
              name="company"
              placeholder="Google"
            />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="jobposting">Location</label>
            <input
              type="text"
              class="form-control"
              name = "location"
              placeholder="Seattle, WA"
            />
          </div>
          <div class="form-group col-md-3">
            <label>Remote</label>
            <select name="remote" class="form-control">
              <option selected>Choose...</option>
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="jobposting">Date Applied</label>
            <input type="text" name="dateApplied" class="form-control" placeholder="01/01/2020" />
          </div>
          <div class="form-group col-md-3">
            <label for="inputPassword4">Posting URL</label>
            <input
              type="text"
              class="form-control"
              name="postingUrl"
              placeholder="Google.com/jobs"
            />
          </div>
        </div>
        <!-- Upload Resume/Cover Letter -->

          <div class="form-row">
          <div class="form-group">
            <label for="exampleFormControlFile1">Resume Used:</label>
            <input type="file" name="resume" class="form-control-file" />
          </div>

          <div class="form-group">
            <label for="exampleFormControlFile1">Cover Letter Used:</label>
            <input type="file" name="coverLetter" class="form-control-file" />
          </div>

      </div>
      <!-- Full Job Description -->
      <div class="form-row">
      <div class="form-group col-md-10">
        <label for="jobposting">Full Job Description</label>
        <input
          type="text"
          class="form-control"
          name="fullJobDescription"
          placeholder="Software Engineer"
        />
      </div>
    </div>
      <!-- References section -->
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="jobposting">Reference Name</label>
          <input type="text" name="referenceName" class="form-control" placeholder="John Smith" />
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Phone:</label>
          <input
            type="text"
            class="form-control"
            name="referencePhone"
            placeholder="(123) 456-7890"
          />
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Email</label>
          <input
            type="text"
            class="form-control"
            name="referenceEmail"
            placeholder="Smith.John@DreamCompany.com"
          />
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">LinkedIn URL</label>
          <input
            type="text"
            class="form-control"
            name="referenceLinkedIn"
            placeholder="LinkedIn.com/JohnSmith"
          />
        </div>
      </div>
      <!-- Notes -->
      <div class="form-row">
        <div class="form-group col-md-10">
          <label for="jobposting">Notes:</label>
          <input
            type="text"
            class="form-control"
            name="notes"
            placeholder=""
          />
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      </form>
    </section>
  </body>
</html>
