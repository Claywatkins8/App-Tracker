<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Partials/head.ejs -->
    <%- include('../partials/head.ejs') %>

    <title>Application Tracker</title>
  </head>
  <!-- NavBar -->
  <%- include('../partials/navbar.ejs') %>

  <body>
    <h1 class="text-center">Applications by Company</h1>
    <div class="list-group allApp-list allapp-company app-form">
      <% companies.forEach(company => { %>

      <a
        class="list-group-item list-group-item-action allapp-company text-center"
        href="/companies/<%= company._id %>"
      >
        <%= company.name.toUpperCase() %>
      </a>

      <% }) %> <% if(companies.length === 0) { %>
      <p>There are no Companies available yet.</p>
      <% } %>
    </div>
  </body>
</html>
