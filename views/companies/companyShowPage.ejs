<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Partials/head.ejs -->
    <%- include('../partials/head.ejs') %>
    <title>All Current Applications</title>
  </head>
  <!-- NavBar -->
  <%- include('../partials/navbar.ejs') %>

  <body>
    <h1>Company Show Page</h1>

    <h3 class="text-center"><%= companies.name.toUpperCase() %></h3>
    <main>
      <div class="list-group allApp-list allapp-company">
        <% companies.applications.forEach(application => { %>

        <a
          href="/applications/<%= application._id %>"
          class="list-group-item list-group-item-action"
        >
          <%= application.jobTitle %>
        </a>

        <% }); %>
      </div>
    </main>
  </body>
</html>
