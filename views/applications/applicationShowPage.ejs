<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Partials/head.ejs -->
    <%- include('../partials/head.ejs') %>

    <title>Application Tracker</title>
  </head>
  <!-- NavBar -->
  <%- include('../partials/navbar.ejs') %>

  <body >
    <div class="text-center">
      <h1>Application Show Page</h1>
    </div>
    <!-- Show App Info by ID -->
    <div class="container app-form">
      <!-- First row -->
      <div class="form-row">
        <div class="form-group col-md-6">
          <label>Job Posting Title: </label>
          <%= application.jobTitle %>
        </div>
        <div class="form-group col-md-3">
          <label>Company: </label>
          <%= application.company.name.toUpperCase() %>
        </div>
      </div>
    <!-- Location/Remote -->
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Location: </label>
        <%= application.location %>
      </div>
      <div class="form-group col-md-3">
        <label>Remote: </label>
        <%= application.remote %>
      </div>
    </div>
    <!-- Date/URL -->
      <div class="form-row">
        <div class="form-group col-md-6">
          <label>Date Applied: </label>
          <%= application.dateApplied %></div>
        <div class="form-group col-md-3">
          <label>Posting: </label>
          <%= application.postingUrl %></div>
      </div>
    <!-- Resume/Cover Letter -->
    <!-- <div class="form-row">
    <div class="form-group col-md-6">
    <label>Resume: </label>
    <img src="data:<%= application.resume.type %>;base64,<%= application.resume.data %>" alt=""></div>
    <div class="form-group col-md-3">
    <label>Cover Letter: </label>
    <img src="data:<%= application.coverLetter.type %>;base64,<%= application.coverLetter.data %>" alt=""></div>
    </div> -->
      <!-- Referance -->
      <div class="form-row">
        <div class="form-group col-md-4">
          <label>Reference Name: </label>
          <%= application.referenceName %></div>
        <div class="form-group col-md-3">
          <label>Phone: </label>
          <%= application.referencePhone %></div>
          <div class="form-group col-md-3">
            <label>Email: </label>
            <%= application.referenceEmail %></div>
            <div class="form-group col-md-3">
              <label>LinkedIn: </label>
              <%= application.referenceLinkedIn %></div>
      </div>
      <!-- full Job Description box -->
      <div class="form-row">
        <div class="form-group">
          <label>Job Description: </label>
          <%= application.fullJobDescription %></div>
        </div>

      <!-- Notes -->
      <div class="form-row">
        <div class="form-group">
          <label>Notes: </label>
          <%= application.notes %></div>
        </div>

    <!-- Delete button form -->
    <form
      action="/applications/<%= application._id %>?_method=DELETE"
      method="POST">

    <div class="row justify-content-center">
      <div class="col-4">
          <input type="submit" class="btn btn-primary btn-block" value="Delete" />
        </form>
      </div>
     <!-- Edit button form -->
     <div class="col-4">
       <a
       class="btn btn-primary btn-block"
       href="/applications/<%= application._id %>/edit"
       >Edit</a>
      </div>
     </div>
  </body>
</html>
