<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Link up css -->
    <link rel="stylesheet" href="/styles/main.css" />
    <!-- Link up scripts -->
    <script src="/scripts/app.js" defer></script>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />

    <title>All Current Applications</title>
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Application Tracker</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/"
            >Home <span class="sr-only">(current)</span></a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/companies/">Applications by Company</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/applications/">All Applications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/applications/new">Add Applications</a>
        </li>
      </ul>
    </div>
  </nav>

  <body>
    <h1>All Current Applications</h1>
    <main>
      <div class="list-group">
        <% companies.forEach(company => { %>
        <a
          href="/companies/<%= company._id %>"
          class="list-group-item list-group-item-action"
        >
          <%= company.name %>
        </a>
        <!-- Nested Jobs -->

        <% company.applications.forEach(application => { %>

        <a
          href="/applications/<%= application._id %>"
          class="list-group-item list-group-item-action"
        >
          - <%= application.jobTitle %>
        </a>

        <% }); %> <% }) %>
      </div>
    </main>
  </body>
</html>
