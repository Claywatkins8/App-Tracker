<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Application Tracker</title>
  </head>
  <!-- NavBar -->
  <%- include('partials/navbar.ejs') %>

  <body>
    <h1>Welcome to the Application Tracker</h1>

    <div class="list-group allApp-list app-form">
      <ul>
        <% if (user) { %>

        <h3 class="text-center">Welcome back <%= user.username %></h3>

        <form action="/logout?_method=DELETE" method="POST">
          <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Logout" />
          </div>
        </form>

        <% } else { %>
        <div class="row justify-content-center">
          <div class="col-4">
            <a class="btn btn-primary btn-block" href="/register">Register</a>
          </div>
          <div class="col-4">
            <a class="btn btn-primary btn-block" href="/login">Login</a>
          </div>
        </div>
        <% } %>
      </ul>
    </div>
  </body>
</html>
